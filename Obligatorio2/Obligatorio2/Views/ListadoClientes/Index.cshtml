
@{
    ViewBag.Title = "Listado";
}

<h2>Listado cliente</h2>

<form action="~/ListadoClientes" method="post">
    <table>
        <tr>
            <td><label for="inicio">Fecha inicio: </label></td>
            <td><input type="date" name="inicio" /></td>
        </tr>
        <tr>
            <td><label for="final">Fecha final: </label></td>
            <td><input type="date" name="final" /></td>
        </tr>
    </table>
    <button type="submit" >Filtrar</button>
</form>
<hr />
<ul>
    @*Ordenar la lista previamente a recorrerla.*@
    @foreach (var item in ObligatorioDominio.Sistema.Instancia.Clientes)
    {
        <li>@item.ToString()</li>
    }

</ul>
